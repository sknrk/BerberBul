<%- include("../partials/header") %>

<%- include("../partials/navbar") %>

<div class="container">
    <div class="row">

      <h1 style="text-align:center;">Create A New Comment <%= berber.name %></h1>

      <div style="width: 30%; margin : 25px auto;">

        <form action="/berberler/<%= berber._id %>/comments" method="post">

            <div class="form-group">
              <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="comment[author]" placeholder="author">
            </div>
            <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>

        <a href="/berberler">Go Back</a>

      </div>
    </div>


</div>

<%- include("../partials/footer") %>
